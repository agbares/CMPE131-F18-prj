// Dashboard Index Template
doctype html
html(lang="en")

head
	title Dashboard
	meta(charset="utf-8")
	meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
	link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js")
	script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")
	script(src="js/jquery.backstretch.min.js")

body
	<script>$.backstretch("img/orange0.jpg");</script>
	nav(class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top main-nav")
		button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar")
			span(class="navbar-toggler-icon")
		div(class="mx-auto")
			a(class="navbar-brand" href="/") SFG Banking
		div(class="collapse navbar-collapse" id="collapsibleNavbar")
			ul(class="nav navbar-nav flex-fill justify-content-center")
				li(class="nav-item")
					a(class="nav-link" href="dashboard/deposit") Make deposit
				li(class="nav-item")
					a(class="nav-link" href="dashboard/transfer") Transfer
				li(class="nav-item")
					a(class="nav-link" href="dashboard/billpay") Pay bill
				li(class="nav-item")
					a(class="nav-link" href="dashboard/settings") Setting
				li(class="nav-item")
					a(class="nav-link" href="../find-atm") Find nearest ATM
				li(class="nav-item")
					a(class="nav-link" href="../sign-out") Sign Out
	br
	
	div(class="container" style="margin-top:80px")
		h1 Dashboard

		if checkingAccount
			p
				a(href=`dashboard/account/${checkingAccount._id}`) Checking Account
				br
				| Balance: $#{checkingAccount.balance}
		else
			p 
				a(href="#") Open a Checking account
				br
  
		if savingAccount
			p
				a(href=`dashboard/account/${savingAccount._id}`) Saving Account
				br
				| Balance: $#{savingAccount.balance}
		else
			p 
				a(href="#") Open a Saving account
				br

		if creditAccount
			p
				a(href=`dashboard/account/${creditAccount._id}`) Credit account
				br
				| Balance: $#{creditAccount.balance}
		else
			p
				a(href="#") Open Credit account
				br

		div
			a(href="dashboard/deposit") Make deposit
			br
			br

			a(href="dashboard/transfer") Transfer
			br
			br

			a(href="dashboard/billpay") Pay bill
			br
			br

			a(href="dashboard/settings") Setting
			br
			br

			a(href="../sign-out") Sign Out

	