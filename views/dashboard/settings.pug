// Setting Index Template
html
  head
    title Setting
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")
    script(src="js/jquery.backstretch.min.js")

  body
    nav(class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top main-nav")
      button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar")
        span(class="navbar-toggler-icon")
      div(class="mx-auto")
        a(class="navbar-brand" href="/") SFG Banking
      div(class="collapse navbar-collapse" id="collapsibleNavbar")
        ul(class="nav navbar-nav flex-fill justify-content-center")
            li(class="nav-item")
                a(class="nav-link" href="../../dashboard") Dashboard
            li(class="nav-item")
                a(class="nav-link" href="./deposit") Make deposit
            li(class="nav-item")
                a(class="nav-link" href="./transfer") Transfer
            li(class="nav-item")
                a(class="nav-link" href="./billpay") Pay bill
            li(class="nav-item")
                a(class="nav-link" href="/find-atm") Find nearest ATM
            li(class="nav-item")
                a(class="nav-link" href="../../sign-out") Sign Out
    br
    <div class="container" style="margin-top:80px"></div>

    div(class="container" style="margin-top:80px")
        div(class="row")
            div(class="col-sm-4")
            div(class="col-sm-4" style="background-color:AliceBlue; border-radius: 8px; padding-top:20px; padding-right:50px; padding-bottom:30px; padding-left:50px;")
                h2(class="text-center") Setting
                br
                h5(class="text-center") Dear customer, you can change your password here. 
                form(method="post" action='settings/change-password')
                    div(class="text-center") #{error}
                    fieldset(class="form-group") 
                        p Please enter your old password:
                        div(class="form-group")
                            <input type="text" name="old-password">
                        p Please enter your new password:
                        div(class="form-group")
                            <input type="password" name="new-password">
                        p Please re-enter your new password:
                        div(class="form-group")
                            <input type="password" name="confirm-new-password">
                        button(type="submit" class="btn btn-primary btn-block" value="Submit") Submit
                br
                br
                br
                
                h5(class="text-center") Dear customer, you can close your accounts here.
                form(method="post" action='settings/close-account')
                    div(class="text-center") #{error}
                    fieldset(class="form-group") 
                        if savingAccount
                            p Click here to close your Saving Account. 
                            div(class="form-group")
                                input(type="hidden" name="account-id" value=`${savingAccount._id}`)
                                <input type="submit" value="Submit">
                        if creditAccount
                            if creditAccount.balance == 0 
                                p Click here to close your Credit Account. 
                                div(class="form-group")
                                    input(type="hidden" name="account-id" value=`${creditAccount._id}`)
                                    <input type="submit" value="Submit">
                            else
                                p *Dear customer, you have to pay your credit card fully before closing it.
                br
                br
                br
                
                h5(class="text-center") Dear customer, you can close your enter SFG banking account here.
                form(method="post" action='close-user')
                    div(class="text-center") #{error}
                    fieldset(class="form-group") 
                        if creditAccount
                            if creditAccount.balance == 0 
                                p Click here to close your enter banking account at SFG. 
                                p Please enter your password to comfirm this action:<br>
                                div(class="form-group")
                                    input(type="hidden" value=`${creditAccount._id}`)
                                    <input type="password" name = "password">
                                    <input type="submit" value="Submit">
                            else
                                p *Dear customer, you have to pay your credit card fully before closing your enter banking account at SFG.
                        else
                            p Click here to close your enter banking account at SFG. 
                            p Please enter your password to comfirm this action:<br>
                            div(class="form-group")
                                input(type="hidden" value=`${creditAccount._id}`)
                                <input type="password" name = "password">
                                <input type="submit" value="Submit">

                <br><br>
                p
                    a(href="/dashboard") Return to Dashboard
                    br
                    br
                    a(href="../sign-out") Sign Out
            div(class="col-sm-4")